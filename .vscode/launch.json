{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Backend",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}/apps/backend",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Frontend",
      "port": 9228,
      "restart": true,
      "localRoot": "${workspaceFolder}/apps/frontend",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}

